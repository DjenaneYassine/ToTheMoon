<!DOCTYPE html>
<html class="dark">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Bienvenue sur ToTheMoon{% endblock %}</title>
        <link rel="icon" href="public\images\logo.png">
        {% block stylesheets %}
            <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />
            <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
            {#FOR PRODUCTIOON --> <link href="./public/styles/bg.css'" rel="stylesheet" />#}
            <link href="{{asset('styles/bg.css')}}" rel="stylesheet" />
        {% endblock %}

        {% block javascripts %}
            {#FOR PRODUCTIOON --> <script src="./public/js/globalRequestAJAX.js'"></script>#}
            <script src="{{asset('js/globalRequestAJAX.js')}}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        <script>
           $(document).ready(function() {
                $(window).scroll(function() {
                    var scroll = $(window).scrollTop();
                    if (scroll > 0) {
                        $('#header').addClass('bg-gray-900 shadow-md');
                    } else {
                        $('#header').removeClass('bg-gray-900 shadow-md');
                    }
                });
                star();
                fetchDataAndUptade();
                setInterval(fetchDataAndUptade, 2500);
		    });
        </script>
    </body>
    
</html>
